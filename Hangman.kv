#:kivy 1.10.0

<Stand>:
    canvas:
        Color:
            rgba: 238/255, 227/255, 199/255, 1
        Rectangle:
            pos: [50, 100]
            size: [150, 10]
        Rectangle:
            pos: [50 + 70, 100 + 10]
            size: [10, 300]
        Rectangle:
            pos: [50 + 70, 100 + 310]
            size:[150, 10]
            
<Head>:
    canvas:
        Color:
            rgba: 238/255, 227/255, 199/255, 1
        Ellipse:
            pos: self.pos
            size: self.size
            
<HangmanGame>:
    canvas:

        Color:
            rgb: (0, 79/255, 48/255)

        Rectangle:
            pos: self.pos
            size: self.size
            
    Stand:
    Head:
        id: head_graphic
        pos: [-100, -100]
        size: [50, 50]
    
    Label:
        id: display_word_id
        text: root.display_word
        font_size: 50
        color: 241/255, 179/255, 16/255, 1
        center_x: root.width - root.width/3
        top: root.height/5
        
    Button:
        id: A
        text: 'A'
        font_size: root.letter_font_size
        color: root.letter_color
        center_y: root.top - (root.height/10) * (int((ord(self.text)-65)/13)+1)
        center_x: ((ord(self.text)-65)%13) * root.width/13 + (root.width/13 - self.width/2)
        height: root.height/10
        width: root.width/13
        on_press: root.check_in_word(self)

